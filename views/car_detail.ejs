<%- include('layout', { title: 'Car Detail' }) %>

<div class="bg-gray-100 flex items-center justify-center h-screen p-4 gap-4">
  <div>
    <img src="https://placehold.co/500x450" alt="">
    <p class="text-center">No Image(s)</p>
  </div>
  <div class="bg-white rounded-lg shadow-lg max-w-4xl w-full p-4 ">
    <h1 class="text-2xl font-semibold text-gray-800 mb-4">Car Details:</h1>
    <h2 class="text-2xl font-semibold text-gray-800 mb-4"><%= car.manufacturer_name %> <%= car.model_name %></h2>
    <p class="text-lg text-gray-700 mb-2"><strong>Price:</strong> $<%= car.price_usd %></p>
    <p class="text-lg text-gray-700 mb-2"><strong>Year:</strong> <%= car.year_produced %></p>
    <p class="text-lg text-gray-700 mb-2"><strong>Odometer Value:</strong> <%= car.odometer_value %> miles</p>
    <p class="text-lg text-gray-700 mb-2"><strong>Engine Capacity:</strong> <%= car.engine_capacity %> liters</p>
    <p class="text-lg text-gray-700 mb-2"><strong>Color:</strong> <%= car.color %></p>
    <p class="text-lg text-gray-700 mb-2"><strong>Transmission:</strong> <%= car.transmission %></p>
    <p class="text-lg text-gray-700 mb-2"><strong>Engine Type:</strong> <%= car.engine_type %></p>
    <p class="text-lg text-gray-700 mb-2"><strong>Body Type:</strong> <%= car.body_type %></p>
    <p class="text-lg text-gray-700 mb-2"><strong>Duration Listed:</strong> <%= car.duration_listed %> days</p>
    <div class="mt-6 border-t border-gray-300 pt-4">
      <p class="text-lg text-gray-700"><strong>Description:</strong> <%= car.description || 'No description available.' %></p>
    </div>
  </div>
</div>
<div class="text-center">
  <p>
    Click To Inqure About This Vehicle
  </p>
  <button class="bg-blue-500 text-white rounded-lg text-lg hover:bg-blue-600 p-4">
    Contact Us!
  </button>
</div>

